    <div class="container">
      <h1>X-chat</h1>

      <div class="row">
        <div class="col-md-4">
          <form action="">
            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control message"
                placeholder="Message"
                aria-label="Message"
                aria-describedby="button-addon2"
              />
              <button
                onclick="sendMessage()"
                class="btn btn-sm btn-primary"
                type="button"
                id="button-addon2"
              >
                Send
              </button>
            </div>
          </form>
        </div>
        <div class="col-md-8">
