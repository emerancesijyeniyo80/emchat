              <div class="card border-primary mb-3" style="max-width: 20rem">
                <div class="card-header">Broadcasted message</div>
                <div class="card-body">
                  <div class="displayMessage"></div>
                </div>
              </div>
            </div>
            <div class="col-md-3"></div>
          </div>
